.chk_1,.chk_2,.chk_3,.chk_4 {
    display: none;
}
 
/*******STYLE 1*******/
.chk_1 + label {
    background-color: #FFF;
    border: 1px solid #C1CACA;
    padding: 6px;
    display: inline-block;
    position: relative;
}
.chk_1:checked + label {
    background-color: #ECF2F7;
    border: 1px solid #92A1AC;
    color: #243441;
}
.chk_1:checked + label::after {
    content: "âœ”";
    position: absolute;
    top: -3px;
